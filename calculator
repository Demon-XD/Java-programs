import java.util.Scanner;
public class modify_calculator
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int n;
        int a,b;
        double c;
        
        System.out.println("enter numbers 1 by 1, 2 times");
        a=sc.nextInt();
        b=sc.nextInt();
        
        System.out.println("enter the operator - 1=+,2=-,3=/,4=* ,5 for sq root and 6 for cb root (remember the number first entered will be calculated as square and cube roots)");
        n=sc.nextInt();
        
        switch(n)
        {
            case 1:
                c=a+b;
                System.out.println("the answer is :"+c);
                break;
            
            case 2:
                c=a-b;
                System.out.println("the answer is :"+c);
                break;
                
            case 3:
                c=a/b;
                System.out.println("the answer is :"+c);
                break;
                
            case 4:
                c=a*b;
                System.out.println("the answer is :"+c);
                break;
                
            case 5:
                System.out.println(Math.sqrt(a));
                break;
                
            case 6:
                System.out.println(Math.cbrt(a));
                break;
                
            default:
                System.out.println("incorrect");
            }
            
        }
    }
            

 
